QToolTip
{
    background-color: rgb( 20, 20, 20);
    color: rgb( 245, 245, 245);
    border: 1px solid #555555;
}

/* dock widget */

QDockWidget
{
    titlebar-close-icon: url(://styles/dark/close.png);
    titlebar-normal-icon: url(://styles/dark/dock_widget_lock.png);
}

QDockWidget:disabled
{
    titlebar-close-icon: url(://styles/dark/close_disabled.png);
    titlebar-normal-icon: url(://styles/dark/dock_widget_lock_disabled.png);
}

QDockWidget::title
{
    text-align: left; /* align the text to the left */
    background: #555555;
    padding-left: 5px;
}

QDockWidget::title:disabled
{
    background: rgb(110,110,110);
}

QDockWidget::close-button, QDockWidget::float-button
{
    icon-size: 10px;
}

/*
    If below dockwidget code is not working then comment them for the default behaviour
*/
QDockWidget::close-button:hover:!pressed, QDockWidget::float-button:hover:!pressed
{
    icon-size: 12px;
    background-color: #235c96;
}

QDockWidget::close-button:pressed, QDockWidget::float-button:pressed
{
    icon-size: 10px;
    background-color: #235c96;
}
